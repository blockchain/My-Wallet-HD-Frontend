.activity-feed
  h5.mtn.aaa.em-400.mbl.af-header(translate="MOST_RECENT_ACTIVITY")
  ul.af.pln
    li.af-item.flex-align-start(
      ng-class="{ 'af-fade' : $last }"
      ng-repeat="activity in activities | limitTo: 8"
    )
      .af-marker
        i(ng-class="activity.icon")
      .af-info.flex-center.width-100
        p.h5.af-type.flex-1.mvn(translate="{{ activity.title }}")
        p.af-date.mlm.flex-1.hidden-xs.mvn {{ activity.time | date:'mediumDate' }}
        .af-log.flex-center.flex-3.flex-end
          p.mvn(ng-class="activity.message.toLowerCase()" translate="{{ activity.message }}")
          span.pls(ng-show="activity.type == 0") {{ activity.result | convert }}
    //psuedo empty-state
    li.af-item.flex-align-start(ng-show="activities.length == 0")
      .af-marker
        i.ti-settings
      .af-info.flex-center.width-100
        p.mvn.h5.af-type(translate="ACTIVITY_1")
        p.mvn.af-date.mll.flex-1
        p.mvn.af-log.flex-2.right-align Wallet Setting Changed
    li.af-item.flex-align-start(ng-show="activities.length == 0")
      .af-marker
        i.ti-lock
      .af-info.flex-center.width-100
        p.mvn.h5.af-type(translate="ACTIVITY_2")
        p.mvn.af-date.mll.flex-1
        p.mvn.af-log.flex-2.right-align Security Score Increased!
    li.af-item.flex-align-start.af-fade(ng-show="activities.length == 0")
      .af-marker
        i.ti-settings
      .af-info.flex-center.width-100
        p.mvn.h5.af-type(translate="ACTIVITY_3")
        p.mvn.af-date.mll.flex-1 
        p.mvn.af-log.flex-2.right-align Wallet Setting Changed

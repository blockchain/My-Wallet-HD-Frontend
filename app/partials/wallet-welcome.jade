  .flex-center.flex-column.flex-justify
    h3 Be Your Own Bank
    form.form-horizontal(
      role="form"
      name="signupForm"
      ng-submit="signup()"
      autocomplete="off"
      novalidate)
      .form-group.flex-row.flex-center(ng-class="{'has-error': signupForm.email.$invalid && signupForm.email.$touched}")
        label.mbn(translate="EMAIL")
        input.form-control.mlm.mrm(
          name="email"
          type="email"
          ng-model="fields.email"
          required)
        button.button-primary(
          type="submit"
          ng-disabled="signupForm.$invalid"
          translate="GET_STARTED"
          ng-show="!working")  
        img(ng-show="working" src="img/spinner.gif")

.left-navigation.flex-column.flex-between(ng-if="status.isLoggedIn")
  ul.aside.flex-1-0
    li.header(ui-sref-active="current", ng-click="hideMenu()")
      span.pointer(ui-sref="wallet.common.home")
        i.ti-home
        span(translate="HOME")
    li.scroll-parent.header.scroll-hidden(ui-sref-active="current")
      span.pointer(ui-sref="wallet.common.transactions({accountIndex: ''})")
        i.ti-layout-list-post
        span(translate="MY_TRANSACTIONS") 
      ul.scroll-accounts.aside-list.bg-white.pas(ng-show="showOrHide('transactions')", ng-click="hideMenu()")
        li(ui-sref="wallet.common.transactions({accountIndex: ''})", ng-hide="!status.didUpgradeToHd || (numberOfActiveAccounts() <= 1 && numberOfActiveLegacyAddresses() == 0) ")
          a.pas.display-block
            span.flex-between(ng-class="selectedAccountIndex == '' ? 'blue em-500' : 'basic-grey'")
              span(translate="ALL")
              span
                fiat-or-btc(btc="total()")    
        li(ng-repeat="account in accounts()" ui-sref="wallet.common.transactions({accountIndex: account.index.toString()})")
          a.pas.display-block(ng-if="!account.archived")
            span.flex-between(ng-class="selectedAccountIndex != '' && $index == selectedAccountIndex ? 'blue em-500' : 'basic-grey'")
              span.prs {{::account.label}}
              span
                fiat-or-btc(btc="account.balance")
                img(ng-show="account.balance == null" src="img/spinner.gif")
        li(ui-sref="wallet.common.transactions({accountIndex:'imported'})", ng-show="numberOfActiveLegacyAddresses() > 0")
          a.pas.display-block.imported-addresses
            span.flex-between(ng-class="selectedAccountIndex == 'imported' ? 'blue em-500' : 'mid-grey'")
              span.prs(translate="IMPORTED_ADDRESSES")
              span
                fiat-or-btc(btc="getLegacyTotal()")
          
      li.action-bar.bg-white(ng-show="showOrHide('transactions')")
        a.new-acct.basic-grey.em-500(ng-click="newAccount()", translate="NEW_ACCOUNT")

    li.header(ui-sref-active="current" ng-show="isUserWhitelisted || isUserInvited")
      span.pointer(ui-sref="wallet.common.buy-sell" ng-show="isUserInvited")
        i.ti-direction-alt
        span(translate="BUY_BITCOIN")
      a(ng-click="signupForBuyAccess()" ng-show="!isUserInvited")
        i.ti-direction-alt
        span(translate="BUY_BITCOIN")

    li.header.mbm(ui-sref-active="current",  ng-click="hideMenu()")
      contextual-message
      span.pointer(ui-sref="wallet.common.security-center")
        i.bc-icon-security.security-red(ng-show="security.level <= 2")
        i.bc-icon-security.security-yellow(ng-show="security.level > 2 && security.level < 6")
        i.bc-icon-security.security-green(ng-show="security.level == 6")
        span(translate="SECURITY_CENTER")
        .progress-bar-wrapper.bg-blue.mlm.flex-1(ng-hide="security.level == 6")
          .bar(ng-class="'level-' + security.level")
    li.scroll-parent.header.mbm(ui-sref-active="current")
      span.pointer(ui-sref="wallet.common.settings")
        i.ti-settings
        span(translate="SETTINGS")
      ul.scroll-settings.aside-list.bg-white.pas(ng-show="showOrHide('settings')" ng-click="hideMenu()")
        li.mts.mbm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.info")
            span.basic-grey(translate="WALLET_INFO")
        li.mvm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.preferences")
            span.basic-grey(translate="PREFERENCES")
        li.mvm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.security")
            span.basic-grey(translate="SECURITY")
        li.mvm(ng-class="{active: accountsRoute()}")
          a.pas(ui-sref="wallet.common.settings.accounts_index")
            span.basic-grey(translate="MENU_ACCOUNTS_AND_ADDRESSES")
    li.header.mbm
      span(ng-click="supportModal()")
        i.ti-headphone
        span(translate="CONTACT_SUPPORT")
  ul.aside.wallet-footer
    li.header.adverts.mbm
      span(translate="SPONSORS")
      adverts
    li.terms-policy
      ul.flex-center.aside.em-300.type-sm
        li.pointer.mrm
          a.text-color(href="https://blockchain.info/Resources/TermsofServicePolicy.pdf", translate="TOS" target="_blank" rel="noopener noreferrer")
        li.mrm.type-xs
          i.ti-control-record
        li.pointer.mrm
          a.text-color(href="https://www.blockchain.com/assets/pdf/Blockchain_PrivacyPolicy.pdf", translate="PRIVACY" target="_blank" rel="noopener noreferrer")
        li.mrm.type-xs
          i.ti-control-record
        li.pointer
          a.text-color(href="https://www.blockchain.com/about", translate="ABOUT" target="_blank" rel="noopener noreferrer")

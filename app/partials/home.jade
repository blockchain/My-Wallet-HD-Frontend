.home.pal
  h2.em-300(translate="BYOB")
  .flex.flex-wrap
    .col-md-6.pln
      .section
        h4.aaa.em-400(translate="MOST_RECENT_ACTIVITY")
        .activity-feed
          .latest-tx(ng-repeat="tx in transactions | limitTo:5")
            transaction-description(transaction="tx")
    .col-md-6
      .section
        did-you-know(dyk="getRandDyk()")
      .section.mtvl
        h4.aaa.em-400(translate="BALANCE_BY_ACCOUNT")
        //change this to == 1 once actual chart.js is added
        .widget.flex-center.flex-justify(ng-class="{ 'empty pos-rel' : accounts().length > 1 }")
          button.button-success.button-sm(ng-click="newAccount()" translate="NEW_ACCOUNT")
          h4.width-75.center-align(translate="HOME_NEW_ACCOUNT_MSG")
          .chart(ng-class="{ 'faded' : accounts().length > 1 }")

header
  hgroup
    .flex-between.flex-center.flex-wrap
      h2.em-300.mtn(translate="VERIFYING_EMAIL")
  div(ng-show="state === 'pending' || state ==='error'")
    hgroup(ng-show="state === 'pending'")
      img(src="img/spinner.gif")
    hgroup(ng-show="state === 'error'")
      p.em-300 {{ error }}


  .flex-center.flex-justify.flex-column(ng-show="state === 'success'")
    .level-complete.flex-center.flex-justify
      i.ti-check.bright-green
    h4.em-300.mtl(translate="SUCCESS")
    p.em-300(translate="EMAIL_VERIFIED_SUCCESS")

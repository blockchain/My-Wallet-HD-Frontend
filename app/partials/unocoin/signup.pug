.unocoin-signup.pb-50
  .signup-steps.border-bottom-light
    div(ng-include="'partials/unocoin/signup-steps.pug'")
  div.pl-40.pr-40.pt-40.pb-25
    div(ng-if="vm.onStep('create')" ng-controller="UnocoinCreateAccountController")
      exchange-create(
        exchange-name="name"
        mobile-required="mobileRequired"
        views="views"
        exchange="exchange"
        go-to="goTo(step)"
        terms-of-service="https://www.unocoin.com"
        privacy-agreement="https://www.unocoin.com/privacy")
    div(ng-if="vm.onStep('verify')" ng-controller="UnocoinVerifyController")
      exchange-verify(
        fields="['fullName', 'mobile', 'pancard', 'address', 'pincode']"
        mobile-preferences="['IN']"
        steps="['address', 'info']"
        exchange="exchange"
        exchange-name="Unocoin"
        go-to="goTo(step)"
        next-step="'upload'")
    div(ng-if="vm.onStep('upload')" ng-include="'partials/unocoin/upload.pug'" ng-controller="UnocoinUploadController")
    div(ng-if="vm.onStep('pending')" ng-include="'partials/unocoin/pending.pug'" ng-controller="UnocoinPendingController")
  contact-support-footer.abs(ng-hide="inMobileBuy")

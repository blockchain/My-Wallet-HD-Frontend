.flex-row.height-100.pt-70.pb-40.pl-40.pr-40
  .flex-row.flex-column-tablet.center-mobile.width-100-tablet.width-100.width-100-mobile
    .width-40.hidden-xs
      .width-80
        span.f-20.em-500(translate="Complete the following steps to buy bitcoin!")

    .width-60.flex-row.flex-between-mobile.center(ng-class="inMobileBuy ? 'flex-column-mobile' : 'flex-baseline'")
      .width-25.flex-column.flex-center(ng-class="vm.onStep('create') ? 'primary' : 'hidden-xs'" ng-click="buySellDebug && vm.goTo('create')")
        span.f-14 1
        span.mt-5(translate="Phone & Email")

      .flex-justify.hidden-xs
        i.ti-arrow-right.f-16

      .width-25.flex-column.flex-center(ng-class="vm.onStep('verify') ? 'primary' : 'hidden-xs'" ng-click="buySellDebug && vm.goTo('verify')")
        span.f-14 2
        span.mt-5(translate="Setup Profile")

      .flex-justify.hidden-xs
        i.ti-arrow-right.f-16

      .width-25.flex-column.flex-center(ng-class="vm.onStep('upload') ? 'primary' : 'hidden-xs'" ng-click="buySellDebug && vm.goTo('link')")
        span.f-14 3
        span.mt-5(translate="Upload Documents")

      .flex-justify.hidden-xs
        i.ti-arrow-right.f-16

      .width-25.flex-column.flex-center(ng-class="vm.onStep('buy') ? 'primary' : 'hidden-xs'" ng-click="buySellDebug && vm.goTo('buy')")
        span.f-14 4
        span.mt-5(translate="Buy Bitcoin")
  .close-modal
    i.ti-close.pointer(ng-click="vm.close()")
